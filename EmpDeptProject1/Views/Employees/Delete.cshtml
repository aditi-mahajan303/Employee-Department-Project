@model EmpDeptProject.Models.Models.Employee
@{
    ViewData["Title"] = "Delete";
}



<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Employee</h2>
            <hr />

        </div>

        <div class="mb-3">
            <label asp-for="EmpId"></label>
            <input asp-for="EmpId" disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="EmpName"></label>
            <input asp-for="EmpName" disabled class="form-control" />

        </div>

        <div class="mb-3">
            <label asp-for="EmpSalary"></label>
            <input asp-for="EmpSalary" disabled class="form-control" />

        </div>

        <div class="mb-3">
            <label asp-for="DeptId"></label>
            <input asp-for="DeptId" disabled class="form-control" />

        </div>

        <button type="submit" class="btn btn-outline-danger" style="width:100px">Delete</button>
        <a asp-controller="Employees" asp-action="Index" class="btn btn-secondary" style="width:100px">Back</a>
    </div>
</form>

