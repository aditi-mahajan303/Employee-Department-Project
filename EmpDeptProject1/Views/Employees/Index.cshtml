@model IEnumerable<EmpDeptProject.Models.Models.Employee>
@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employee Details</h2>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="Employees" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus"></i>Add Employee</a>
        </div>


    </div>

</div>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Employee Id
            </th>
            <th>
                Employee Name
            </th>
            <th>
                Employee Salary
            </th>
            <th>
                Department Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>
                   
                   @c.EmpId
                </td>
                <td>@c.EmpName</td>
                <td>@c.EmpSalary</td>
                <td>@c.Departments.DeptName</td>

                <td>
                    <div>
                        <a asp-controller="Employees" asp-action="Edit" class="btn btn-primary" asp-route-id="@c.EmpId"><i class="bi bi-pencil-square"></i></a>
                    </div>
                <td>
                    <div>
                        <a asp-controller="Employees" asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@c.EmpId"><i class="bi bi-trash"></i></a>
                    </div>
                </td>
               </td>

            </tr>
        }
    </tbody>
</table>

